{
  "name": "next-firebase-starter",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:storageRules": "firebase deploy --only storage:rules",
    "deploy:index": "firebase deploy --only firestore:indexes",
    "start:emulators": "firebase emulators:start --import=./firebase_emulators_data --export-on-exit=./firebase_emulators_data",
    "lint": "next lint",
    "prettier": "prettier --check .",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "firebase": "9.8.2",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "recoil": "0.7.2",
    "swr": "1.3.0",
    "zod": "3.17.3"
  },
  "devDependencies": {
    "@types/node": "16.0.0",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "autoprefixer": "10.4.7",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-tailwindcss": "3.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "prettier": "2.6.2",
    "tailwindcss": "3.0.24",
    "typescript": "4.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
