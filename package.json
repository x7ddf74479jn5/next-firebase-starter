{
  "name": "next-firebase-starter",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "serve": "run-s build start",
    "lint": "next lint",
    "prettier": "prettier --check .",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "firebase": "9.6.9",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "0.6.1"
  },
  "devDependencies": {
    "@types/node": "16.0.0",
    "@types/react": "17.0.41",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "autoprefix": "1.0.1",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-tailwindcss": "3.5.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
