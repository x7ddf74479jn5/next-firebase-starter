{
  "name": "next-firebase-starter",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:storageRules": "firebase deploy --only storage:rules",
    "deploy:index": "firebase deploy --only firestore:indexes",
    "start:emulators": "firebase emulators:start --import=./firebase_emulators_data --export-on-exit=./firebase_emulators_data",
    "lint": "next lint",
    "prettier": "prettier --cache --check .",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --cache --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "firebase": "9.10.0",
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recoil": "0.7.5",
    "swr": "1.3.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@types/node": "16.0.0",
    "@types/react": "18.0.21",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "autoprefixer": "10.4.12",
    "eslint": "8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-tailwindcss": "3.6.2",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.17",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
